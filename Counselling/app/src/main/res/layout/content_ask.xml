<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ask"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nyi.annonymous.counselling.activities.AskActivity"
    tools:showIn="@layout/activity_ask"
    android:background="@color/colorBg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2">

        <android.support.v7.widget.CardView
            android:id="@+id/ll_cv_health"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/margin_small"
            app:cardBackgroundColor="#fff">

            <com.nyi.annonymous.counselling.components.MMTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="က်န္းမာေရး"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:id="@+id/MMTextView" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/ll_cv_ep"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_medium"
            app:cardBackgroundColor="#fff">

            <com.nyi.annonymous.counselling.components.MMTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ပညာေရး"
                android:textColor="@color/colorPrimary"
                android:gravity="center"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2">

            <android.support.v7.widget.CardView
                android:id="@+id/ll_cv_jp"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/margin_small"
                app:cardBackgroundColor="#fff">

                <com.nyi.annonymous.counselling.components.MMTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="အလုပ္အကိုင္"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ll_cv_sp"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_medium">

                <com.nyi.annonymous.counselling.components.MMTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="လူမႈေရး"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2">

            <android.support.v7.widget.CardView
                android:id="@+id/ll_cv_l"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/margin_small"
                app:cardBackgroundColor="#fff">

                <com.nyi.annonymous.counselling.components.MMTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ဥပေဒ"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ll_cv_rp"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_medium">

                <com.nyi.annonymous.counselling.components.MMTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="အခ်စ္ေရး"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
